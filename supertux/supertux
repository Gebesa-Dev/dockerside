#!/usr/bin/env bash
#
# Run Docker container.
# (follows https://google.github.io/styleguide/shell.xml)
set -e

readonly CONTAINER_NAME='supertux'
readonly IMAGE_NAME="suckowbiz/${CONTAINER_NAME}"
readonly USER_DATA="${HOME}/.config/supertux2"
if [[ ! -e "${USER_DATA}" ]]; then
    mkdir --parent "${USER_DATA}"
fi

# Enable pulseaudio TCP server and propagate credentials (sever, cookie) to X11 to let containre pulseaudio auto-connect to it.
# Chrome would work with /dev/snd but then it uses sound exclusively and another container is muted.
pactl load-module module-native-protocol-tcp auth-ip-acl=127.0.0.1 1>/dev/null
pactl load-module module-x11-publish 1>/dev/null

# enable passing display to be able to run any GUI
xhost +local:root > /dev/null 2>&1

# removing previous existing containers to enable start up
docker rm --force --volumes ${CONTAINER_NAME} >/dev/null 2>&1 || true

# privileged must remain to avoid issues with i9x graphic driver load
docker run \
  --detach \
  --device /dev/dri \
  --env DISPLAY \
  --env GIVEN_GROUP=$(id -gn "${USER}") \
  --env GIVEN_GROUP_ID=$(id -g "${USER}") \
  --env GIVEN_USER="${USER}" \
  --env GIVEN_USER_ID="${UID}" \
  --net "host" `# Required to connect pulseaudio` \
  --name "${CONTAINER_NAME}" \
  --volume /etc/localtime:/etc/localtime:ro \
  --volume /tmp/.X11-unix:/tmp/.X11-unix:ro \
  --volume "${USER_DATA}":/var/lib/supertux2 \
  ${IMAGE_NAME}
